<?xml version='1.0' encoding='utf-8'?>
<widget id="com.codingsips.ji1" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Jamaat Islami Party</name>
    <description>
        Pakistan Leading Political and Islamic Party JI App
    </description>
    <author href="https://alampk.com" email="alamnaryab@gmail.com">
            Fakhr-e-Alam
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
	
    <preference name="permissions" value="none"/>
    <preference name="android-build-tool" value="gradle" /> 
    <plugin name="cordova-plugin-admobpro" source="npm" />
	
    
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />	

	<platform name="android"> 
		<icon src="www/icon.png" />
        <icon src="www/res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/drawable-xxxhdpi-icon.png" />
        <splash density="land-ldpi" src="www/res/screen/android/ll.png" />
        <splash density="land-mdpi" src="www/res/screen/android/lm.png" />
        <splash density="land-hdpi" src="www/res/screen/android/lh.png" />
        <splash density="land-xhdpi" src="www/res/screen/android/lx.png" />
        <splash density="land-xxhdpi" src="www/res/screen/android/lxx.png" />
        <splash density="land-xxxhdpi" src="www/res/screen/android/lxxx.png" />
        <splash density="port-ldpi" src="www/res/screen/android/pl.png" />
        <splash density="port-mdpi" src="www/res/screen/android/pm.png" />
        <splash density="port-hdpi" src="www/res/screen/android/ph.png" />
        <splash density="port-xhdpi" src="www/res/screen/android/px.png" />
        <splash density="port-xxhdpi" src="www/res/screen/android/pxx.png" />
        <splash density="port-xxxhdpi" src="www/res/screen/android/pxxx.png" />
    </platform>
	
	<plugin name="cordova-plugin-splashscreen" source="npm" />
	<preference name="SplashScreen" value="screen"/>		
	<preference name="SplashScreenDelay" value="5000" />
    <splash src="www/splash.png" />
	
	
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
