<?xml version='1.0' encoding='utf-8'?>
<widget id="com.codingsips.ji1" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Jamaat Islami Party</name>
    <description>
        Pakistan Leading Political and Islamic Party JI App
    </description>
    <author href="https://alampk.com" email="alamnaryab@gmail.com">
            Fakhr-e-Alam
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
	
    <preference name="permissions" value="none"/>
    <preference name="android-build-tool" value="gradle" /> 
    <gap:plugin name="cordova-plugin-admobpro" source="npm" />
	
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    
	<icon platform="android" qualifier="ldpi" src="res/icon/android/drawable-ldpi-icon.png" />
	<icon platform="android" qualifier="mdpi" src="res/icon/android/drawable-mdpi-icon.png" />
	<icon platform="android" qualifier="hdpi" src="res/icon/android/drawable-hdpi-icon.png" />
	<icon platform="android" qualifier="xhdpi" src="res/icon/android/drawable-xhdpi-icon.png" />
	<icon platform="android" qualifier="xxhdpi" src="res/icon/android/drawable-xxhdpi-icon.png" />
	<icon platform="android" qualifier="xxxhdpi" src="res/icon/android/drawable-xxxhdpi-icon.png" />
	
	<preference name="SplashScreen" value="screen"/>		
	<preference name="SplashScreenDelay" value="5000" />
	
	<splash platform="android" qualifier="land-ldpi" src="res/screen/android/drawable-land-ldpi-screen.png" />
	<splash platform="android" qualifier="land-mdpi" src="res/screen/android/drawable-land-mdpi-screen.png" />
	<splash platform="android" qualifier="land-hdpi" src="res/screen/android/drawable-land-hdpi-screen.png" />
	<splash platform="android" qualifier="land-xhdpi" src="res/screen/android/drawable-land-xhdpi-screen.png" />
	<splash platform="android" qualifier="land-xxhdpi" src="res/screen/android/drawable-land-xxhdpi-screen.png" />
	<splash platform="android" qualifier="land-xxxhdpi" src="res/screen/android/drawable-land-xxxhdpi-screen.png" />
	<splash platform="android" qualifier="port-ldpi" src="res/screen/android/drawable-port-ldpi-screen.png" />
	<splash platform="android" qualifier="port-mdpi" src="res/screen/android/drawable-port-mdpi-screen.png" />
	<splash platform="android" qualifier="port-hdpi" src="res/screen/android/drawable-port-hdpi-screen.png" />
	<splash platform="android" qualifier="port-xhdpi" src="res/screen/android/drawable-port-xhdpi-screen.png" />
	<splash platform="android" qualifier="port-xxhdpi" src="res/screen/android/drawable-port-xxhdpi-screen.png" />
	<splash platform="android" qualifier="port-xxxhdpi" src="res/screen/android/drawable-port-xxxhdpi-screen.png" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
